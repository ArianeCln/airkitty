
<!-- kitty  -->

<div class ="wrapper-show">
  <div class="container">
    <div class = "row">
      <div class= "col-xs-12 col-sm-6">
        <div class="picture">
          <% @kitten.photos.each do |photo| %>
          <%= cl_image_tag photo.path, width: 500, height: 500, crop: :fill %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4 col-sm-offset-1 padded">
        <div class="bg-white padded-2em">
          <h3 class="text-center"><%= @kitten.name %></h3>
          <div class="padded-2em left-padded-5em">
            <p><strong>Personality:</strong> <%=  @kitten.personality %></p>
            <p><strong>Diet:</strong> <%= @kitten.diet %></p>
            <p><strong>Home delivery option:</strong>  <%= @kitten.home_delivery %></p>
            <p><strong>Price per day:</strong> <%= @kitten.price_per_day %></p>
          </div>
          <div class = "text-center">
            <%= link_to "Book this cute kitty !", new_kitten_booking_path(@kitten), class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>


