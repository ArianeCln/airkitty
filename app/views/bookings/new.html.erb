<h1 class="text-center">Ask for a booking of <%= @kitten.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <%= simple_form_for [@kitten, @booking] do |f| %>
        <%= f.error_notification %>

        <%= f.input :start_date, as: :string, input_html: {class: "datepicker"}%>
        <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>

        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
